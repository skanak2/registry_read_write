void readit()
{
	
char lszValue[255];
	     HKEY hKey;	 
		 LONG returnStatus;	 
		 DWORD dwType=REG_SZ;	  
		 DWORD dwSize=255;

		 lRes = RegOpenKeyEx(HKEY_LOCAL_MACHINE, "SOFTWARE\\RegisteredApplications\\kast", 0, KEY_READ, &hKey);

		 regRetVal = RegQueryValueEx(hKey, TEXT("1"), 0, &dwType,(BYTE *)&lszValue, &dwSize);
	     string str(lszValue);
		 cout<<dwSize<<endl;
              // printf("%s\n", lszValue[]);
		 cout<<str;
		 /*int i =0;

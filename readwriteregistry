}
void isdirpresent()//checking if the directory is present
{

	ifstream rdfile;
	 lRes = RegOpenKeyExW(HKEY_LOCAL_MACHINE, L"SOFTWARE\\RegisteredApplications\\kast", 0, KEY_READ, &hKey);
	 if( lRes == ERROR_SUCCESS )
	 {
		dirpresent=true;
	
	 }
	 
			


}

